
const int limitSwitch1  = 3;
const int limitSwitch2  = 14;
const int limitSwitch3  = 18;
void setup() {
 pinMode(limitSwitch1, INPUT); 
 pinMode(limitSwitch2, INPUT); 
 pinMode(limitSwitch3, INPUT); 
}

void loop() {
  
  int limSw1 = digitalRead( limitSwitch1);
  int limSw2 = digitalRead( limitSwitch2);
  int limSw3 = digitalRead( limitSwitch3);

  if(limSw1==LOW&&limSw2==LOW%%limSw3==LOW)//home
  {
  }
  else if(limSw1==LOW&&limSw2==HIGH&&limSw3==HIGH)//bekle,yeni veri,asagı in
  {
  }
  else if(limSw1==LOW&&limSw2==HIGH&&limSw3==LOW)//bırakma
  {
  }
  else//toplama
  {
  }

  
}
